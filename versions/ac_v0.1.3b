# Movement functions
def player_move_or_attack(dx, dy):
    global fov_recompute, targeted_tile

    #Check what is there and grep it
    x = player.x + dx
    y = player.y + dy
    target = None
    for object in objects:
        if object.fighter and object.x == x and object.y == y:
            target = object
            break
    if target != None:
        player.fighter.attack(target)
    else:
        player.move(dx, dy)
        for object in objects:
            if object != player and object.x == player.x and object.y == player.y:
                message('You are standing on ' + object.name)
        fov_recompute = True

